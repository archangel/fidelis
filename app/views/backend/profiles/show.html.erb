<h1><%= t(:show_resource, resource: controller_name.singularize.humanize.titleize) %></h1>

<%= render 'buttons' %>

<p>
  <%- avatar = current_user.avatar.attached? ? current_user.avatar.variant(resize_to_limit: [30, 30]).processed : current_user.avatar_url(30) -%>
  <%= image_tag(avatar, class: 'img-avatar', alt: current_user.name, title: current_user.name) %>
</p>

<p>
  <strong><%= t(:name) %>:</strong>
  <%= @profile.name %>
</p>

<p>
  <strong><%= t(:username) %>:</strong>
  <%= @profile.username %>
</p>

<p>
  <strong><%= t(:email) %>:</strong>
  <%= @profile.email %>
</p>
