<%= simple_form_for([:backend, collection], html: { autocomplete: 'false' }) do |f| %>
  <div class="form-group">
    <%= f.input :name %>
    <%= f.input :slug %>
  </div>

  <div class="form-group collection_fields">
    <h3><%= t(:fields) %></h3>

    <%= f.simple_fields_for :fields do |field| %>
      <%= render 'field_fields', f: field %>
    <% end %>

    <div class="links">
      <%= link_to_add_association(t(:add_field), f, :fields,
                                  class: 'btn btn-secondary', role: 'button') %>
    </div>
  </div>

  <div class="form-group text-right">
    <%= f.button :submit, class: 'btn btn-primary' %>
  </div>
<% end %>
