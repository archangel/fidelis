<h1><%= t(:index_resource, resource: controller_name.singularize.humanize.titleize) %></h1>

<%= render 'buttons' %>

<% if @pages.present? %>

  <div class="table-responsive text-nowrap">
    <table class="table table-hover table-bordered table-striped">
      <thead>
        <tr>
          <th><%= t(:title) %></th>
          <th><%= t(:permalink) %></th>
          <th class="actions text-right"><%= t(:actions) %></th>
        </tr>
      </thead>

      <tbody>
        <%= render partial: 'page', collection: @pages %>
      </tbody>
    </table>
  </div>

  <%= paginate @pages %>

<% else %>

  <p><%= t(:no_resources, resources: controller_name.humanize.downcase) %></p>

<% end %>
