<h1>Users</h1>

<% if @users.present? %>

  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Username</th>
        <th>Email</th>
        <th>Deleted at</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.name %></td>
          <td><%= user.username %></td>
          <td><%= user.email %></td>
          <td><%= user.deleted_at %></td>
          <td><%= link_to 'Show', backend_user_path(user) %></td>
          <td><%= link_to 'Edit', edit_backend_user_path(user) %></td>
          <td><%= link_to 'Destroy', backend_user_path(user), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= paginate @users %>

<% else %>

  <p>No users found.</p>

<% end %>

<br>

<%= link_to 'New User', new_backend_user_path %>
