<%= simple_form_for([:backend, site], as: :site,
                                      url: :backend_site,
                                      html: { autocomplete: 'false' }) do |f| %>
  <%= f.input :name %>
  <%= f.input :theme %>
  <%= f.input :locale, include_blank: false,
                       collection: I18n.available_locales.map(&:to_s) %>

  <%= f.button :submit %>
<% end %>
