<div class="form-row nested-fields">
  <div class="col-md-5">
    <%= f.input :name, as: :select, collection: suggested_site_metatags, include_blank: true %>
  </div>

  <div class="col-md-5">
    <%= f.input :content %>
  </div>

  <div class="col-md-2">
    <%= link_to_remove_association(t(:remove_metatag), f,
                                   class: 'btn btn-danger', role: 'button') %>
  </div>
</div>
